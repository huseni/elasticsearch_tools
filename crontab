1 2 * * * DATE=`/bin/date +\%Y-\%m-\%d`; /opt/devops/cron/close_elasticsearch_indices.sh >> /opt/devops/cron/logs/close_elasticsearch_indices_${DATE}.log
30 2 * * * DATE=`/bin/date +\%Y-\%m-\%d`; /opt/devops/cron/snapshot_elasticsearch.sh >> /opt/devops/cron/logs/snapshot_elasticsearch_${DATE}.log
1 3 * * * DATE=`/bin/date +\%Y-\%m-\%d`; /opt/devops/cron/delete_elasticsearch_indices.sh >> /opt/devops/cron/logs/delete_elasticsearch_indices_${DATE}.log